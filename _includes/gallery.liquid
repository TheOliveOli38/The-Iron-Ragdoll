<div class="gallery">
  {% for img in imgs %}
  <div class="img">
    {% assign bruhhh = img.name | append: "." | append: img.type %}
    {% image "gallery/" bruhhh 120 img.name %}
    {% if img.comment or img.type == 'gif' %}
      <div class="icons">
        {% if img.comment %}{% lucide 'message-circle' 16 %}{% endif %}
        {% if img.type == 'gif' %}{% lucide 'image-play' 16 %}{% endif %}
      </div>
    {% endif %}
    <div class="modal">
      <div class="close">{% lucide 'x' 48 %}</div>
      {% if img.type == 'gif' %}
        <img src="/img/gallery/{{ img.name }}.gif" alt="{{ img.name }}"/>
      {% else %}
        {% assign bruhhh = img.name | append: "." | append: img.type %}
        {% image "gallery/" bruhhh 1000 img.name %}
      {% endif %}
      {% if img.ch %}
      <div class="chbuttons">
        {% for ch in img.ch %}
        <div>{% include 'chButton', ch: ch %}</div>
        {% endfor %}
      </div>
      {% endif %}
      <div class="comment">
        <p class="name-date"><span>{{ img.name }}</span><span>{{ img.date }}</span></p>
        {% if img.comment %}
          {{ img.comment | renderMD }}
        {% endif %}
      </div>
    </div>
  </div>
  {% endfor %}
</div>