---
layout: layout.liquid
title: Characters
desc: The characters!
eleventyNavigation:
  key: Characters
  parent: Root
  order: 999
---
<link rel="stylesheet" href="/css/characterspage.css"/>
<div class="box-nav">
    <a href="minor/">Minor characters</a>
    <a href="list/">Sortable text list</a>
</div>
<details>
    <summary><h2>Tag filter</h2></summary>
    {% for tag in tagsplot %}
        <a href="/characters/tag/{{ tag | slug }}/">{{ tag }}</a>
    {% endfor %}
</details>
<div class="chs">
    {% for ch in characters %}
        <div tags="{% for tag in ch.tags %}{{ tag | slug }} {% endfor %}">
        <div class="ch" style="--c: {{ ch.color }}">
            <a href="{{ ch.name | lowerCase }}/">
            {% assign iconPath = ch.name | lowerCase | append: " thumb.png" %}
            {% assign profilePath = ch.name | lowerCase | append: " profile.png" %}
            {% image "gallery/" profilePath 200 ch.name '' iconPath %}
            </a>
        </div>
        {% include 'chButton', ch: ch.name %}
        </div>
    {% endfor %}
</div>
<script src="/js/filter.js"></script>
<script>
  new Filter(document.querySelector('.chs')).filtering();
</script>