<script>
let chs = document.getElementById('chs').children;
let descs = document.getElementById('descs').children;

for(desc of descs) {
	desc.style.display = 'none';
}

for(ch of chs) {
	if(!Array.from(ch.classList).includes('unrevealed')) {
		let chName = ch.getAttribute('ch');
		ch.addEventListener('click', e => switchDescs(e, chName));
	}
}

function switchDescs(e, id) {
	for(ch of chs) {
		ch.className = ch.className.replace("active", "");
	}
	for(desc of descs) {
		desc.style.display = 'none';
	}
	e.currentTarget.classList.add('active');
	document.getElementById(id).style.display = 'block';
}
</script>